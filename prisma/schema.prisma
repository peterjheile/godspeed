model Event {
  id            String    @id @default(cuid())
  name          String
  description   String?
  startAt       DateTime
  endAt         DateTime?
  location      String?
  type          EventType @default(TRAINING)

  createdAt       DateTime @default(now())
}

enum EventType {
  TRAINING
  RACE
  SOCIAL
  OTHER
}




