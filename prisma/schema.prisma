generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------- Models ----------
model Event {
  id            String    @id @default(cuid())
  name          String
  description   String?
  startAt       DateTime
  endAt         DateTime?
  location      String?
  type          EventType @default(TRAINING)

  createdAt       DateTime @default(now())
}


model Member {
  id        String      @id @default(cuid())
  name      String
  email     String?     @unique
  role      MemberRole  @default(RIDER)
  joinedAt  DateTime    @default(now())


  avatarUrl String?
  bio       String?

  rides     Ride[]
  raceresults RaceResult[]
}


model Ride {
  id          String   @id @default(cuid())
  member      Member   @relation(fields: [memberId], references: [id])
  memberId    String
  startedAt   DateTime
  endedAt     DateTime
  distanceKm  Float?
  polyline    String
}

model Race {
  id          String        @id @default(cuid())
  name        String        // Display name, e.g. "Little 500", "Godspeed Fundraiser"
  type        RaceType
  seasonLabel String        // e.g. "Spring 2025", "Fall 2024"
  date        DateTime?
  location    String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  results     RaceResult[]
}

model RaceResult {
  id          String    @id @default(cuid())
  race        Race      @relation(fields: [raceId], references: [id])
  raceId      String

  member      Member?   @relation(fields: [memberId], references: [id])
  memberId    String?

  riderName   String?   // For non-member or manual override
  teamName    String?   // Team name for team events
  category    String?   // e.g. "Men's A", "Women", "Alumni"
  place       Int?      // 1, 2, 3, ...
  time        String?   // Flexible: "2:13:45", "35 laps", "N/A"
  notes       String?
  createdAt   DateTime  @default(now())
}

model RaceDefinition {
  id          String   @id @default(cuid())
  name        String
  type        RaceType
  isRecurring Boolean  @default(true)
  createdAt   DateTime @default(now())
}




// ---------- Enums ----------
enum EventType {
  TRAINING
  RACE
  SOCIAL
  OTHER
}


enum MemberRole {
  RIDER
  COACH
  MECHANIC
  MANAGER
  ALUMNI
  OTHER
}


enum RaceType {
  LITTLE_500
  MISS_N_OUT
  TEAM_PURSUIT
  INDIVIDUAL_TT
  OTHER
}






